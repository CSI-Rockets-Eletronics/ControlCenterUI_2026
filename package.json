{
  "name": "rocket-control-center",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "(tsc || echo 'ignoring tsc errors for now...') && vite build",
    "build:rockets-ui": "(tsc || echo 'ignoring tsc errors for now...') && vite build --outDir dist-rockets-ui --base /rockets-ui/",
    "preview": "vite preview",
    "format": "prettier --write .",
    "lint": "eslint src",
    "type-check": "tsc --noEmit",
    "xstate:typegen": "xstate typegen src/machines/**/*.ts",
    "prepare": "husky install",
    "postinstall": "bun xstate:typegen"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{html,css,json,md,yml,yaml}": "prettier --write"
  },
  "dependencies": {
    "@radix-ui/colors": "^0.1.8",
    "@xstate/react": "^3.2.2",
    "data-server-node": "CSI-Rockets-Eletronics/data-server-node#96add13",
    "pigeon-maps": "^0.21.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2",
    "recharts": "^2.5.0",
    "tailwind-merge": "^1.9.1",
    "tailwind-scrollbar": "^3.0.5",
    "uuid": "^9.0.0",
    "xstate": "^4.38.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "@xstate/cli": "^0.5.5",
    "autoprefixer": "^10.4.13",
    "bun-types": "latest",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "postcss": "^8.4.21",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^4.1.0",
    "vite-tsconfig-paths": "^4.0.5"
  },
  "trustedDependencies": [
    "data-server-node"
  ]
}
